# Staging Environment Configuration
# Copy this file to .env.staging and update values

# Application Settings
NODE_ENV=staging
PORT=3000
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://postgres:${POSTGRES_PASSWORD}@postgres:5432/orchestrall_staging
POSTGRES_PASSWORD=staging_postgres_password

# Redis Configuration
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379
REDIS_PASSWORD=staging_redis_password

# Security Configuration
JWT_SECRET=staging_jwt_secret_key_minimum_32_characters
ENCRYPTION_KEY=staging_encryption_key_32_chars
SESSION_SECRET=staging_session_secret_key

# API Keys (Use staging/test keys)
OPENAI_API_KEY=your_openai_staging_api_key_here
SHOPIFY_API_KEY=your_shopify_staging_api_key_here
SHOPIFY_API_SECRET=your_shopify_staging_api_secret_here
RAZORPAY_KEY_ID=your_razorpay_staging_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_staging_key_secret_here
ZOHO_CLIENT_ID=your_zoho_staging_client_id_here
ZOHO_CLIENT_SECRET=your_zoho_staging_client_secret_here

# AWS Configuration (Staging bucket)
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_S3_BUCKET=your_staging_s3_bucket_name_here
AWS_REGION=us-east-1

# Cloudinary Configuration (Staging environment)
CLOUDINARY_CLOUD_NAME=your_staging_cloudinary_cloud_name_here
CLOUDINARY_API_KEY=your_staging_cloudinary_api_key_here
CLOUDINARY_API_SECRET=your_staging_cloudinary_api_secret_here

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://elasticsearch:9200

# External APIs
OPENWEATHER_API_KEY=your_openweather_api_key_here
NCDEX_API_KEY=your_ncdex_api_key_here

# Monitoring Configuration
GRAFANA_PASSWORD=staging_grafana_password
PROMETHEUS_RETENTION_TIME=72h

# Email Configuration (Staging SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=staging@yourdomain.com
SMTP_PASS=your_staging_email_password_here

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE_PATH=/app/logs

# Rate Limiting (More lenient for testing)
RATE_LIMIT_MAX=200
RATE_LIMIT_WINDOW=60000

# CORS Configuration (Staging domains)
CORS_ORIGIN=https://staging.yourdomain.com,https://test.yourdomain.com

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/staging-cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/staging-key.pem

# Backup Configuration
BACKUP_SCHEDULE=0 1 * * *
BACKUP_RETENTION_DAYS=7
BACKUP_PATH=/app/backups

# Performance Configuration
WORKER_PROCESSES=2
MAX_CONNECTIONS=500
KEEPALIVE_TIMEOUT=65

# Security Headers
SECURITY_HEADERS=true
CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net https://cdnjs.cloudflare.com; style-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net https://cdnjs.cloudflare.com; img-src 'self' data: https:; connect-src 'self' wss: ws:; frame-src 'self';

# Feature Flags (Enable all for testing)
ENABLE_WEBSOCKET=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_ANALYTICS=true
ENABLE_BACKUP=true
ENABLE_MONITORING=true
ENABLE_DEBUG_MODE=true
