# Development Environment Configuration
# Copy this file to .env.development and update values

# Application Settings
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/orchestrall_dev
POSTGRES_PASSWORD=postgres

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Security Configuration
JWT_SECRET=dev_jwt_secret_key_minimum_32_characters_long
ENCRYPTION_KEY=dev_encryption_key_32_characters_exactly
SESSION_SECRET=dev_session_secret_key

# API Keys (Development/test keys)
OPENAI_API_KEY=your_openai_dev_api_key_here
SHOPIFY_API_KEY=your_shopify_dev_api_key_here
SHOPIFY_API_SECRET=your_shopify_dev_api_secret_here
RAZORPAY_KEY_ID=your_razorpay_dev_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_dev_key_secret_here
ZOHO_CLIENT_ID=your_zoho_dev_client_id_here
ZOHO_CLIENT_SECRET=your_zoho_dev_client_secret_here

# AWS Configuration (Development bucket)
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_S3_BUCKET=your_dev_s3_bucket_name_here
AWS_REGION=us-east-1

# Cloudinary Configuration (Development environment)
CLOUDINARY_CLOUD_NAME=your_dev_cloudinary_cloud_name_here
CLOUDINARY_API_KEY=your_dev_cloudinary_api_key_here
CLOUDINARY_API_SECRET=your_dev_cloudinary_api_secret_here

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200

# External APIs
OPENWEATHER_API_KEY=your_openweather_api_key_here
NCDEX_API_KEY=your_ncdex_api_key_here

# Monitoring Configuration
GRAFANA_PASSWORD=admin
PROMETHEUS_RETENTION_TIME=24h

# Email Configuration (Development SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=dev@yourdomain.com
SMTP_PASS=your_dev_email_password_here

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging Configuration
LOG_LEVEL=debug
LOG_FILE_PATH=./logs

# Rate Limiting (Very lenient for development)
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=60000

# CORS Configuration (Allow all for development)
CORS_ORIGIN=*

# SSL Configuration (Not required for development)
SSL_CERT_PATH=
SSL_KEY_PATH=

# Backup Configuration
BACKUP_SCHEDULE=0 0 * * *
BACKUP_RETENTION_DAYS=3
BACKUP_PATH=./backups

# Performance Configuration
WORKER_PROCESSES=1
MAX_CONNECTIONS=100
KEEPALIVE_TIMEOUT=65

# Security Headers (Relaxed for development)
SECURITY_HEADERS=false
CONTENT_SECURITY_POLICY=

# Feature Flags (Enable all for development)
ENABLE_WEBSOCKET=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_ANALYTICS=true
ENABLE_BACKUP=false
ENABLE_MONITORING=false
ENABLE_DEBUG_MODE=true
ENABLE_HOT_RELOAD=true
ENABLE_SOURCE_MAPS=true
