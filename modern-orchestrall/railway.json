{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm ci && npm run db:generate"
  },
  "deploy": {
    "startCommand": "npm run start:zero-config",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "healthchecks": {
      "enabled": true,
      "endpoint": "/health",
      "initialDelaySeconds": 10,
      "intervalSeconds": 30,
      "timeoutSeconds": 5
    }
  }
}
