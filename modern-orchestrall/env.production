# Database Configuration for Production
DATABASE_URL="postgresql://orchestrall:secure_password_123@localhost:5432/orchestrall_prod"
DB_HOST=localhost
DB_PORT=5432
DB_NAME=orchestrall_prod
DB_USERNAME=orchestrall
DB_PASSWORD=secure_password_123
DB_SSL=true
DB_MAX_CONNECTIONS=20

# Redis Configuration
REDIS_URL="redis://localhost:6379"
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_secure_password
REDIS_DB=0

# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=production

# Security Configuration
JWT_SECRET=super-secure-jwt-secret-key-change-in-production-2024
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000

# AI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
AGENT_RUNTIME=openai
DEFAULT_MODEL=gpt-4
MAX_TOKENS=4000
TEMPERATURE=0.7

# Monitoring Configuration
LOG_LEVEL=info
ENABLE_METRICS=true
METRICS_PORT=9090
PROMETHEUS_ENABLED=true

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/orchestrall.crt
SSL_KEY_PATH=/etc/ssl/private/orchestrall.key
FORCE_HTTPS=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=orchestrall-backups

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@orchestrall.com
SMTP_PASS=your-smtp-password
EMAIL_FROM=noreply@orchestrall.com

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/var/uploads
ALLOWED_FILE_TYPES=image/*,text/*,application/json,application/pdf

# CORS Configuration
CORS_ORIGIN=https://app.orchestrall.com,https://admin.orchestrall.com
CORS_CREDENTIALS=true

# Feature Flags
FEATURE_FLAGS_PROVIDER=unleash
UNLEASH_URL=http://unleash:4242/api
UNLEASH_API_TOKEN=your-unleash-token

# Deployment Configuration
DEPLOYMENT_TYPE=production
DEPLOYMENT_REGION=us-east-1
VERSION=2.0.0
