# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/orchestrall
DB_HOST=localhost
DB_PORT=5432
DB_NAME=orchestrall
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_SSL=false
DB_MAX_CONNECTIONS=20

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# Feature Flags Configuration
FEATURE_FLAGS_PROVIDER=local
FEATURE_FLAGS_URL=
FEATURE_FLAGS_API_KEY=
FEATURE_FLAGS_REFRESH_INTERVAL=30000

# Agent Runtime Configuration
AGENT_RUNTIME=custom
AGENT_MEMORY_PROVIDER=redis
AGENT_TOOLS=web_search,data_analysis,document_processing
AGENT_TOOLS_TIMEOUT=30000

# Vector Database Configuration (for agent memory)
VECTOR_DB_PROVIDER=chroma
VECTOR_DB_API_KEY=
VECTOR_DB_INDEX_NAME=orchestrall-agents

# AI Provider Configuration
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=
GOOGLE_GEMINI_API_KEY=

# Deployment Configuration
DEPLOYMENT_TYPE=self-hosted
DEPLOYMENT_REGION=us-east-1
DEPLOYMENT_ENVIRONMENT=production

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs
LOG_FILE_MAX_SIZE=10m
LOG_FILE_MAX_FILES=5

# Unleash Feature Flags (if using)
UNLEASH_API_TOKEN=your-unleash-api-token
UNLEASH_URL=http://unleash:4242/api

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Storage Configuration
STORAGE_PROVIDER=local
STORAGE_PATH=./uploads
AWS_S3_BUCKET=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# Monitoring Configuration
SENTRY_DSN=
DATADOG_API_KEY=
GRAFANA_URL=

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
