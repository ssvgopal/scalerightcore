{
  "name": "orchestrall-modern",
  "version": "2.0.0",
  "description": "Next-generation enterprise platform with hybrid deployment and agentic AI",
  "private": true,
  "workspaces": [
    "packages/*",
    "src/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "clean": "turbo clean && rm -rf node_modules",
    "db:generate": "turbo db:generate",
    "db:migrate": "turbo db:migrate",
    "db:seed": "turbo db:seed",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "k8s:deploy": "kubectl apply -f deployment/kubernetes/",
    "k8s:destroy": "kubectl delete -f deployment/kubernetes/",
    "agent:build": "turbo agent:build",
    "agent:test": "turbo agent:test"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "turbo": "^1.12.0",
    "typescript": "^5.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "packageManager": "npm@9.0.0"
}
